<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chapters_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dip"
    android:orientation="vertical" >

    <!-- android:layout_gravity="center_horizontal" -->

    <ToggleButton
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:textOff="((*))"
        android:textOn="X" />

    <ProgressBar
        android:id="@+id/chapter_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chapter_time"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/btn_download"
        android:layout_toRightOf="@+id/chapter_time"
        android:minHeight="10dp" />

    <TextView
        android:id="@+id/chapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/chapter_name"
        android:paddingLeft="10dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/chapter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/btn_download"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>