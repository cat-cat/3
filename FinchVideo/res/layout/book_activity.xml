<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/bookd_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:contentDescription="Book image" />

    <TextView
        android:id="@+id/bookd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bookd_image"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/authors_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookd_title"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bookd_image"
        android:ems="10"
        android:maxLines="2"
        android:text="TextView" />

    <TextView
        android:id="@+id/readers_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookd_image"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:text="TextView" />

    <TextView
        android:id="@+id/size_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/readers_value"
        android:layout_marginLeft="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/length_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/size_value"
        android:layout_marginLeft="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/price_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bookd_description"
        android:layout_toRightOf="@+id/length_value"
        android:ems="10"
        android:text="TextView" />

    <TextView
        android:id="@+id/bookd_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/length_value"
        android:layout_marginLeft="10dp"
        android:scrollHorizontally="true"
        android:text="lorem ipsum ..." />

    <TextView
        android:id="@+id/book_publishers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookd_description"
        android:layout_marginLeft="10dp"
        android:text="publishers" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_publishers"
        android:layout_marginLeft="10dp"
        android:text="Книга предоставлена по договору с Литрес" />

</RelativeLayout>